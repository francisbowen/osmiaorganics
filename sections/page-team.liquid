
<div class="about_bio container nopadding">
   <div class="row">
        {% assign count = 0 %}
          {% for block in section.blocks %}
            {% assign count = count | plus: 1 %}
          {% if block.type == 'bio' %}
          <div class="col-md-20">
            <div class="bio_wrap three-colection-item ">
              <div class="hovereffect1">
              
                <img src="{{ block.settings.bio_image | img_url: 'large' }}" alt="{{block.settings.bio_name}}">
                <div class="bio_overlay">
                  <div class="overlay_title">
                      <h2>{{block.settings.bio_name}}</h2>
                      <p>{{block.settings.bio_designation}}</p>
                  </div>
                  <div class="overlay_content">
                      <a href="#bio-{{count}}" class="team-member-img popup-with-zoom-anim "><span class="button outline">PRO TIP</span></a>
                  </div>
                </div>              
              <div id="bio-{{count}}" class="zoom-anim-dialog mfp-hide small-dialog">
                <p class="designation">{{block.settings.bio_designation}}</p>
                <h2>{{block.settings.bio_name}}</h2>
                <img style="margin-bottom:10px;" src="{{ block.settings.bio_image | img_url: 'large' }}" alt="{{block.settings.bio_name}}">
                <p><strong>{{block.settings.bio_designation}}</strong></p>              
                <div class="bio-detail">
                  {{block.settings.bio_detail}}                
                </div>
                {% comment %}
                {{block.settings.bio_details}}
                {%- assign products_handles = block.settings.products | split: ',' -%}
                {%- for products_handle in products_handles -%}
                {%- assign team_product = all_products[products_handle] -%}
                {% if team_product %}
                  <a href="{{ team_product.url }}" class="btn mb-1">{{ team_product.title }}</a>
                {% endif %}
                {%- endfor -%}
                {% endcomment %}
              </div>
              </div>
            </div>
            </div>
            {% endif %}
         {% endfor %}
   </div>
</div>
{% if section.blocks.size == 0 %}
<div class="full-width">
  <div class="container about-container">
    <div class="row row-{{ block.type }}{% if block.type == 'heading_row' %} align-items-center{% endif %}">
      {% include 'no-blocks' %}
    </div>
  </div>
</div>
{% endif %}
{% schema %}
  {
    "name": "Our Team",
    "class": "index-section",
    "blocks": [
      {
        "type": "bio",
        "name": "Bio",
        "settings": [
          {
            "type": "text",
            "id": "bio_name",
            "label": "Name"
          },
          {
            "type": "text",
            "id": "bio_designation",
            "label": "Designation"
          },
          {
            "type": "image_picker",
            "id": "bio_image",
            "label": "Image"
          },
          {
            "type": "richtext",
            "id": "bio_detail",
            "label": "Details"
          }
        ]
      }
    ]
  }
{% endschema %}
