{% if section.settings.enable_sidebar %}
  {% if section.settings.sidebar_position == 'sidebar-left' %}
    {%- assign col_width = 'col-md-35 push-md-25' -%}
    {%- assign side_width = 'col-md-20 pull-md-40' -%}
  {% else %}
    {%- assign col_width = 'col-md-35' -%}
    {%- assign side_width = 'col-md-20 offset-md-5' -%}
  {% endif %}
{% else %}
  {%- assign col_width = 'col-md-50 offset-md-5 space-item' -%}
{% endif %}

<div class="container">
  <div class="row">
    <article class="{{ col_width }}">
      {%- assign start_title = page.content | slice: 0, 3 -%}
      {% unless start_title contains 'h1' %}
        <div class="section-header">
          <h1>{{ page.title }}</h1>
        </div>
      {% endunless %}
      
      <div class="rte">
        {{ page.content }}
      </div>
    </article>

    {% if section.settings.enable_sidebar %}
      <aside class="sidebar-page {{ side_width }}">
        {% include 'sidebar' %}
      </aside>
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Page Sidebar",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_sidebar",
        "label": "Enable sidebar?"
      },
      {
        "type": "radio",
        "id": "sidebar_position",
        "options": [
          { "value": "sidebar-left", "label": "Left"},
          { "value": "sidebar-right", "label": "Right"}
        ],
        "label": "Sidebar position"
      }
    ],
    "blocks": [
      {
        "type": "collection_sidebar",
        "name": "Featured Collection",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "collection",
            "id": "collection",
            "label": "Collection to use"
          },
          {
            "type": "select",
            "id": "collection_qty",
            "options": [
              { "value": "2", "label": "2" },
              { "value": "3", "label": "3" },
              { "value": "4", "label": "4" },
              { "value": "5", "label": "5" },
              { "value": "6", "label": "6" }
            ],
            "label": "Number of products to show"
          }
        ]
      },
      {
        "type": "menu_sidebar",
        "name": "Quick Links",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "link_list",
            "id": "quick_links",
            "label": "Linklist to use"
          }
        ]
      },
      {
        "type": "image_sidebar",
        "name": "Advertisement",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Ad image"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Ad link"
          }
        ]
      },
      {
        "type": "blog_sidebar",
        "name": "Most Recent Blog Post",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Latest Article"
          }
        ]
      }
    ]
  }
{% endschema %}