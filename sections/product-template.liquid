<div class="product-template__container container" {% comment %}itemscope itemtype="http://schema.org/Product"{% endcomment %} id="ProductSection-{{ product.id }}" data-section-id="{{ product.id }}" data-section-type="product" data-enable-history-state="true" data-crossclick="{% if settings.enable_crossclick %}allow{% endif %}" data-comingsoon="{% if product.tags contains 'coming soon' %}true{% else %}false{% endif %}">

  {% include 'richcards' %}
  {% comment %} {% include 'breadcrumbs' %} {% endcomment %}

  <!--
  <meta itemprop="name" content="{{ product.title }}">
  <meta itemprop="url" content="{{ shop.url }}{{ product.url }}">
  <meta itemprop="image" content="{{ product.featured_image.src | img_url: '1200x' }}">
  <meta itemprop="brand" content="{{ product.vendor }}">
  <meta itemprop="sku" content="{{ product.variants.first.sku }}">
  <meta itemprop="description" content="{{ product.description | escape }}">
  -->

  {% comment %}
    Get first variant, or deep linked one
  {% endcomment %}
  {%- assign current_variant = product.selected_or_first_available_variant -%}
  {%- assign product_thumb_size = '1200x' -%}
  {%- assign product_image_zoom_size = '1024x1024' -%}
  {%- assign enable_zoom = section.settings.enable_zoom -%}

  {% case section.settings.image_size %}
    {% when 'small' %}
      {%- assign product_image_width = 'col-md-20' -%}
      {%- assign product_description_width = 'col-md-40' -%}
      {%- assign product_thumbnail_width = 'col-md-20' -%}
      {%- assign product_thumbnail_perrow = '3' %}
      {%- assign product_image_size = '1200x' -%}
    {% when 'medium' %}
      {%- assign product_image_width = 'col-md-30' -%}
      {%- assign product_description_width = 'col-md-30' -%}
      {%- assign product_thumbnail_width = 'col-md-15' -%}
      {%- assign product_thumbnail_perrow = '4' %}
      {%- assign product_image_size = '1200x' -%}
    {% when 'large' %}
      {%- assign product_image_width = 'col-md-40' -%}
      {%- assign product_description_width = 'col-md-20' -%}
      {%- assign product_thumbnail_width = 'col-md-12' -%}
      {%- assign product_thumbnail_perrow = '5' %}
      {%- assign product_image_size = '1200x' -%}
    {% when 'full' %}
      {%- assign product_image_width = '' -%}
      {%- assign product_description_width = '' -%}
      {%- assign product_thumbnail_width = 'col-md-6' -%}
      {%- assign product_thumbnail_perrow = '10' %}
      {%- assign product_image_size = '1200x' -%}
      {%- assign enable_zoom = false -%}
  {% endcase %}

  {%- assign product_thumbnail_perrow = product_thumbnail_perrow | times: 1 -%}

  <div class="row product-single">
    <div class="product-single__photos {{ product_image_width }}{% if section.settings.image_size == 'full' %} product-single__photos--full{% endif %}">
      {%- assign featured_img_src = current_variant.featured_image.src | default: product.featured_image.src -%}
      {%- assign featured_img_alt = current_variant.featured_image.alt | default: product.featured_image.alt -%}

      {% if settings.enable_crossclick %}
        {%- assign prod_image_size = 0 -%}
        {% for image in product.images %}
          {% if image.attached_to_variant? %}
            {%- assign prod_image_size = prod_image_size | plus: 1 -%}
          {% endif %}
        {% endfor %}
      {% else %}
        {%- assign prod_image_size = product.images.size -%}
      {% endif %}

      {% if section.settings.vertical and prod_image_size > 1 %}
        <div class="row vertical-thumbs">
          <div class="col-lg-50 push-lg-10">
          <div class='product-single__meta hidden-md-up text-center'>
            <h1 itemprop="name" class="product-single__title mb-2">{{ product.title }}</h1>
            <span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span>
          </div>
      {% endif %}
      <div id="FeaturedImageZoom-{{ product.id }}" class="product-single__photo{% if product.images.size > 1 %} product-single__photo--has-thumbnails{% endif %}" {% if enable_zoom %}data-zoom="{{ featured_img_src | img_url: product_image_zoom_size }}"{% endif %}>
        <img src="{{ featured_img_src | img_url: product_image_size }}" alt="{{ featured_img_alt }}" id="FeaturedImage-{{ product.id }}" class="product-featured-img{% if enable_zoom %} js-zoom-enabled{% endif %}">
        {% for block in section.blocks %}
          {%- assign product_block = all_products[block.settings.product] -%}
          {% if product.handle == product_block.handle %}
          {% if block.settings.vide_type == 'youtube' %}
            {% assign video_url = "http://www.youtube.com/watch?v=" | append: block.settings.video_id %}
            {% else %}
            {% assign video_url = "https://vimeo.com/" | append: block.settings.video_id %}
          {% endif %}
            <a class="popup-video product-video-icon"  href="{{video_url}}" style="display:none"><img  src="https://cdn.shopify.com/s/files/1/0447/3157/files/video-btn.png?4338"></a>
            {% endif %}
        {% endfor %}
      </div>
      {% if prod_image_size > product_thumbnail_perrow %}
        {%- assign enable_buttons = true -%}
      {% endif %}

      {% if prod_image_size > 1 %}

      {% if section.settings.vertical and prod_image_size > 1 %}
        </div>
        <div class="col-lg-10 pull-lg-50">
      {% endif %}
        <div class="thumbnails-wrapper">
          {% if enable_buttons == true %}<a id="prevArrow"><i class="fa fa-angle-{% if section.settings.vertical %}up{% else %}left{% endif %}"></i></a>{% endif %}
          <ul class="product-single__thumbnails product-single__thumbnails-{{ product.id }}">
            {% if settings.enable_crossclick %}
              {%- assign attach_tot = 0 -%}
              {%- assign cross_need = false -%}
              {% for image in product.images %}
                {% if image.attached_to_variant? %}
                  {%- assign attach_tot = attach_tot | plus: 1 -%}
                  {% include 'loop-thumbnail' %}
                {% endif %}
              {% endfor %}
              {% unless attach_tot == product.images.size %}
                {%- assign cross_need = true -%}
              {% endunless %}
            {% else %}
              {% for image in product.images %}
                {% include 'loop-thumbnail' %}
              {% endfor %}
            {% endif %}
                {% for block in section.blocks %}
                  {%- assign product_block = all_products[block.settings.product] -%}
                  {% if product.handle == product_block.handle %}
                     <li class="product-single__thumbnails-item video-thumb">
                        <a href="{{block.settings.image | img_url: '600x' }}" class="text-link product-single__thumbnail product-single__thumbnail--{{ product.id }}" style="background-image:url({{block.settings.image | img_url: '600x' }});">
                        <img  src="https://cdn.shopify.com/s/files/1/0447/3157/files/video-btn.png?4338" class="small-play-button"> 
                        </a>
                    </li>
                    {% endif %}
                {% endfor %}
          </ul>
          {% if enable_buttons == true %}<a id="nextArrow"><i class="fa fa-angle-{% if section.settings.vertical %}down{% else %}right{% endif %}"></i></a>{% endif %}
        </div>
      {% endif %}
      {% if section.settings.vertical and prod_image_size > 1 %}
          </div>
        </div>
      {% endif %}
    </div>

{% assign product_description = product.content | split: '<h6>Split</h6>' %}
    <div class="{{ product_description_width }}">
      <div class="product-single__meta mt-3 mt-md-0">
          <div class="hidden-sm-down">
           <h1 itemprop="name" class="product-single__title mb-2">{{ product.title }}</h1>
            <span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span>
          </div>
        {% if section.settings.show_vendor %}
          <p itemprop="brand" class="product-single__vendor">{{ product.vendor }}</p>
        {% endif %}
        <div class="selector-wrapper {{ product.handle }} js col col-md=60">
        <div {% comment %}itemprop="offers" itemscope itemtype="http://schema.org/Offer"{% endcomment %}>
          <meta itemprop="priceCurrency" content="{{ shop.currency }}">
          <meta itemprop="price" content="{{ product.selected_or_first_available_variant.price | money_without_currency }}">
          <link itemprop="availability" href="http://schema.org/{% if product.available %}InStock{% else %}OutOfStock{% endif %}">
          <form action="/cart/add" method="post" enctype="multipart/form-data" class="row align-items-end product-form product-form-{{ product.id }}{% unless section.settings.show_variant_labels %} product-form--hide-variant-labels{% endunless %}" data-section="{{ product.id }}">
{% unless product.options.size == 1 and product.variants[0].title == 'Default Title' %}
              {% for option in product.options_with_values %}
                <div class="col-xl-20 col-md-60 col-sm-20 selector-wrapper {{ product.handle }} js">
                  <label {% if option.name == 'default' %}class="label--hidden" {% endif %}for="SingleOptionSelector-{{ forloop.index0 }}">
                    {{ option.name }}
                  </label>
                  <select class="single-option-selector single-option-selector-{{ product.id }} product-form__input" id="SingleOptionSelector-{{ forloop.index0 }}" data-index="option{{ forloop.index }}">
                    {% for value in option.values %}
                      <option value="{{ value | escape }}"{% if option.selected_value == value %} selected="selected"{% endif %}>{{ value }}</option>
                    {% endfor %}
                  </select>
                </div>
                {% if settings.enable_colorswatch %}
                  {% include 'swatch' with option.name %}
                {% endif %}
              {% endfor %}
            {% endunless %}
            <p class="col-xl-20 col-md-60 col-sm-20 product-single__price product-single__price-{{ product.id }}{% unless current_variant.available %} product-price--sold-out{% endunless %}">
            {% if current_variant.compare_at_price > current_variant.price %}
                <span class="visually-hidden">{{ 'products.product.regular_price' | t }}</span>
                <s id="ComparePrice-{{ product.id }}">{{ current_variant.compare_at_price | money }}</s>
                <span class="product-price__price product-price__price-{{ product.id }}product-price__sale product-price__sale--single">
                  <span id="ProductPrice-{{ product.id }}">{{ current_variant.price | money }}</span>
                  <span class="product-price__sale-label product-price__sale-label-{{ product.id }}">{{ 'products.product.on_sale' | t }}</span>
                </span>
            {% else %}
              <span class="visually-hidden">{{ 'products.product.regular_price' | t }}</span>
              <s id="ComparePrice-{{ product.id }}" class="hide">{{ current_variant.compare_at_price | money }}</s>
              <span class="product-price__price product-price__price-{{ product.id }}">
                <span id="ProductPrice-{{ product.id }}">{{ current_variant.price | money }}</span>
                <span class="product-price__sale-label product-price__sale-label-{{ product.id }} hide">{{ 'products.product.on_sale' | t }}</span>
              </span>
            {% endif %}
          </p>
            <select name="id" id="ProductSelect-{{ product.id }}" data-section="{{ product.id }}" class="product-form__variants col no-js">
              {% for variant in product.variants %}
                {% if variant.available %}
                  <option {% if variant == product.selected_or_first_available_variant %} selected="selected" {% endif %} value="{{ variant.id }}">
                    {{ variant.title }}
                  </option>
                {% else %}
                  <option disabled="disabled">{{ variant.title }} - {{ 'products.product.sold_out' | t }}</option>
                {% endif %}
              {% endfor %}
            </select>
            {% if section.settings.show_quantity_selector %}
              <div class="col-xl-20 col-md-60 col-sm-20 product-form__item product-form__item--quantity">
                <label for="Quantity">{{ 'products.product.quantity' | t }}</label>
                <input type="number" id="Quantity" name="quantity" value="1" min="1" class="product-form__input" pattern="[0-9]*">
              </div>
            {% endif %}
            
            {% if product.tags contains 'gift certificate' %}
            	<style>
            		#AddToCart-{{ product.id }} {
                    	display: none!important;
                    }
            	</style>
            {% endif %}
            
            <div class="col-60">
              <div class="row">
                <div class="col-lg-40 col-md-60 col-sm-40{% if settings.cartajax %}-60{% endif %} product-form__item product-form__item--submit">
                  <div class="button{% if product.options.size == 1 and product.variants[0].title == 'Default Title' and settings.cartajax == false %} product-form__cart-submit--small{% endif %}">
                    <div class="add">
                      
                      {% if product.tags contains 'coming soon' %}
                      	<button type="submit" name="add" id="AddToCart"  disabled="disabled" {% unless current_variant.available %}disabled="disabled"{% endunless %} class="btn product-form__cart-submit 1">
                        <span id="AddToCartText">
                           Coming Soon
                        </span>
                      </button>
                       {% else %}
                          <button type="submit" name="add" id="AddToCart-{{ product.id }}"  {% unless current_variant.available %}disabled="disabled"{% endunless %} class="btn product-form__cart-submit 2">
                        <span id="AddToCartText-{{ product.id }}">
                          
                            {% if current_variant.available %}
                             {{ 'products.product.add_to_cart' | t }}
                         	 {% else %}
                              {{ 'products.product.sold_out' | t }}
                            {% endif %}
                        </span>
                      </button>
                       {% endif %}
                      
                      {% if settings.cartajax %}
                        <a class="btn checkout" href="/cart">
                          <i class="fa fa-shopping-cart" aria-hidden="true"></i><span>Checkout</span>
                        </a>
                        <a class="btn cont" href="{% if collection %}{{ collection.url }}{% else %}/collections/all{% endif %}">
                          <i class="fa fa-angle-right" aria-hidden="true"></i><span>Continue</span>
                        </a>
                      {% endif %}
                    </div>
                  </div>
                </div>
                <div class="col-lg-40 col-md-60 col-sm-40 hidden-sm-up mobile-addtocart-button {% if settings.cartajax %}-60{% endif %} product-form__item product-form__item--submit">
                  <div class="button{% if product.options.size == 1 and product.variants[0].title == 'Default Title' and settings.cartajax == false %} product-form__cart-submit--small{% endif %}">
                    <div class="add">
                      <button type="submit" name="add" id="AddToCart-{{ product.id }}-2" {% unless current_variant.available %}disabled="disabled"{% endunless %} class="btn product-form__cart-submit 3">
                        <span id="AddToCartText-{{ product.id }}-2">{% unless current_variant.available %}{{ 'products.product.sold_out' | t }}{% else %}
                          {% if product.tags contains 'coming soon' %}
                              {{ 'products.product.coming_soon' | t }}
                            {% else %}
                             <p class="product-single__price product-single__price-{{ product.id }}{% unless current_variant.available %} product-price--sold-out{% endunless %}">
                              Buy Now
                                  <span class="mobile-product-price">
                                    {% if current_variant.compare_at_price > current_variant.price %}
                                      <span class="visually-hidden">{{ 'products.product.regular_price' | t }}</span>
                                      <s id="ComparePrice-{{ product.id }}">{{ current_variant.compare_at_price | money }}</s>
                                      <span class="product-price__price product-price__price-{{ product.id }}product-price__sale product-price__sale--single">
                                        <span id="ProductPrice-{{ product.id }}">{{ current_variant.price | money }}</span>
                                        <span class="product-price__sale-label product-price__sale-label-{{ product.id }}">{{ 'products.product.on_sale' | t }}</span>
                                      </span>
                                  {% else %}
                                    <span class="visually-hidden">{{ 'products.product.regular_price' | t }}</span>
                                    <s id="ComparePrice-{{ product.id }}" class="hide">{{ current_variant.compare_at_price | money }}</s>
                                    <span class="product-price__price product-price__price-{{ product.id }}">
                                      <span id="ProductPrice-{{ product.id }}">{{ current_variant.price | money }}</span>
                                      <span class="product-price__sale-label product-price__sale-label-{{ product.id }} hide">{{ 'products.product.on_sale' | t }}</span>
                                    </span>
                                  {% endif %}
                                  </span>
                                </p>
                               {% endif %}
                          {% endunless %}
                        </span>
                      </button>
                      {% if settings.cartajax %}
                        <a class="btn checkout" href="/cart">
                          <i class="fa fa-shopping-cart" aria-hidden="true"></i><span>Checkout</span>
                        </a>
                        <a class="btn cont" href="{% if collection %}{{ collection.url }}{% else %}/collections/all{% endif %}">
                          <i class="fa fa-angle-right" aria-hidden="true"></i><span>Continue</span>
                        </a>
                      {% endif %}
                    </div>
                  </div>
                </div>
                {%- assign cart_tot = cart.total_price -%}
                {%- assign cart_minus = 0 -%}
                {% for item in cart.items %}
                  {% if item.product_id == 390315048988 or item.product_id == 423895728156 or item.gift_card %}
                    {%- assign cart_minus = cart_minus | plus: item.price -%}
                  {% endif %}
                {% endfor %}
                {%- assign cart_tot = cart_tot | minus: cart_minus | money_without_currency -%}
                {%- assign cart_freeship = section.settings.free_ship | times: 1 -%}
                {%- assign countdown = cart_freeship | minus: cart_tot -%}
                <div class="col-md-60"><span class="countdown">{% if countdown > 0 %}Free Shipping -  ${{ countdown | times: 100 | money_without_currency }} more to ship for free{% else %}You have free shipping{% endif %}</span></div>
              </div>
              {% unless settings.enable_crossclick %}
              <div class="product-single__description rte" itemprop="description">
                <div class="hidden-sm-down">
                {{ product_description[0] }}
                </div>
                <div class="hidden-md-up">
                <div class="product-description-mobile">
                  {{ product_description[0] }}
                </div>
                </div>
              </div>
              </div>
            {% endunless %}
            {% if settings.enable_crossclick and product.images.size == prod_image_size %}
            <div class="product-single__description rte" itemprop="description">
              <div class="hidden-sm-down">
              {{ product_description[0] }}
              </div>
              <div class="hidden-md-up">
              {{ product_description[0] | truncatewords: 50, "..." }}
              </div>
            </div>
            {% endif %}
          </form>
          {% if section.settings.enable_wishlist %}
            {% include 'wishlist' %}
          {% endif %}
        </div>
      </div>
        {% if section.settings.show_share_buttons %}
          {% include 'social-sharing', share_title: product.title, share_permalink: product.url, share_image: product %}
        {% endif %}
      </div>
    </div>
  </div>
</div>
{% if settings.enable_crossclick %}
  {% if cross_need and product.images.size != prod_image_size %}
    <div id="description">
      <div class="container">
        <div class="row product-single">
          <div class="col-md-60">
            <div class="row">
                <div class="col-md-28 offset-md-2 col-60">
                  <div class="thumbnails-wrapper--secondary">
                    {% for image in product.images %}
                      {% unless image.attached_to_variant? %}
                        <a href="{{ image.src | img_url: 'original' }}" alt="{{ image.alt }}" class="mp-image image-rect" style="background-image:url({{ image.src | img_url: product_image_size }});">
                    <img src="{{ image.src | img_url: '1024x' }}">
                    </a>
                      {% endunless %}
                    {% endfor %}
                  </div>
                </div>
              <div class="{% if cross_need %}col-md-28 offset-md-2 col-60{% else %}col{% endif %}">
                <div class="product-single__description rte" itemprop="description" style="margin-top:0px; margin-bottom:30px;">
                  <h3>Details</h3>
                  {{ product_description[0] }}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script>
      $(window).load(function(){
        $('.thumbnails-wrapper--secondary').slick({
          infinite: true,
          autoplay: true,
          autoplaySpeed: 5000,
          speed: 350,
          fade: true,
