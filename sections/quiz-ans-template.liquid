{% for block in section.blocks %}
{% assign pagehandle = block.settings.page_handle %}    
{% if pagehandle == page.handle %}   
<section class="page-quiz-ans">
    <div class="container">
        <div class="row">
            <div class="col-md-35">
                <div class="quiz-ans-right-text for-mobile">
                    {% if block.settings.sub_title != blank %}
                        <h1>{{ block.settings.sub_title }}</h1>    
                    {% endif %}
                    {% if block.settings.title != blank %}
                        <h2>{{ block.settings.title }}</h2>    
                    {% endif %}
                    {% if block.settings.sub_sub_title != blank %}
                        <h3>{{ block.settings.sub_sub_title }}</h3>    
                    {% endif %}
                </div>
                <div class="quiz-ans-grid-view-items">
                    {% for i in (1..3) %}
                    {%- capture image -%}product{{i}}_img{%- endcapture -%}
                    {%- capture title -%}product{{i}}_title{%- endcapture -%}
                    {%- capture link -%}product{{i}}_link{%- endcapture -%}
                  {% if block.settings[image] != blank %}  
                  <div class="grid-view-item">
                        {% if block.settings[link] != blank %}
                        <a href="{{ block.settings[link] }}">
                        {% endif %}
                        {% if block.settings[image] != blank %}
                        <div class="grid-view-item__image" style="background-image:url({{ block.settings[image] | img_url: 'master' }});"></div>
                        {% endif %}
                        {% if block.settings[title] != blank %}
                            <div class="grid-view-item__title">{{ block.settings[title] }}</div>
                        {% endif %}                        
                        {% if block.settings[link] != blank %}
                        </a>
                        {% endif %}
                    </div>
                  {% endif %}
                    {% endfor %}
                </div>
                <div class="take-me-mobile">
                    {% if block.settings.cta_text != blank %}
                <a href="{{ block.settings.cta_link }}" class="btn take-me">{{ block.settings.cta_text }}</a>                        
                {% endif %}
                </div> 
            </div>
            <div class="col-md-25">
                <div class="quiz-ans-right-text">
                    <div class="only-for-mobile-sec">
                      
                    {% if block.settings.sub_title_mobile != blank %}
                      <div class="product-content-heading">{{ block.settings.sub_title_mobile }}</div>
                    {% endif %}
                    {% if block.settings.title_mobile != blank %}
                      <div class="product-content-info">{{ block.settings.title_mobile }}</div>
                    {% endif %}
                        
                    </div>
                    {% if block.settings.sub_title != blank %}
                        <h1 class="d-md-block d-none">{{ block.settings.sub_title }}</h1>    
                    {% endif %}
                    {% if block.settings.title != blank %}
                        <h2 class="d-md-block d-none">{{ block.settings.title }}</h2>    
                    {% endif %}
                    {% if block.settings.sub_sub_title != blank %}
                        <h3 class="d-md-block d-none">{{ block.settings.sub_sub_title }}</h3>    
                    {% endif %}
                    {% if block.settings.text != blank %}
                        {{ block.settings.text }}    
                    {% endif %}
                    {% if block.settings.cta_text != blank %}
                    <div class="d-md-block d-none">
                    <a href="{{ block.settings.cta_link }}" class="btn take-me">{{ block.settings.cta_text }}</a> 
                    </div>                       
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .page-quiz-ans-bottom {
        background-image: url({{ block.settings.bottom_img | img_url: 'master' }});
    }
    {% if block.settings.bottom_img_mobile != blank %}
    @media screen and (max-width:767px){
        .page-quiz-ans-bottom {
            background-image: url({{ block.settings.bottom_img_mobile | img_url: 'master' }});
        }   
    }
    {% endif %}
</style>
<section class="page-quiz-ans-bottom">
    <div class="container">
      <div class="row">
        <div class="col-md-25 offset-md-35">
        
        <div class="bottom-text">
            {% if block.settings.bottom_heading != blank %}
            <h4>{{ block.settings.bottom_heading }}</h4>    
            {% endif %}
            {% if block.settings.bottom_text != blank %}
            {{ block.settings.bottom_text }}
            {% endif %}
                <a class="bottom-text-cta" href="/pages/quiz" style="color:{{ block.settings.bottom_cta_text_color }};background-color: {{ block.settings.bottom_cta_color }}; 
                {% if block.settings.bottom_cta_bg != blank %}
                background-image:url({{ block.settings.bottom_cta_bg | img_url: 'master' }});
                {% endif %}
                ">
                {% if block.settings.bottom_cta_text != blank %}
                {{ block.settings.bottom_cta_text }}
                {% else %}
                TAKE
                QUIZ
                AGAIN    
                {% endif %}
                </a>
        </div>
          
        </div>
      </div>
        
    </div>
</section>
{% endif %}
{% endfor %}



